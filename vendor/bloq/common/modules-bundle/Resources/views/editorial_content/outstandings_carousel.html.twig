{% if contents | length > 0 %}
<span class="carrusel">
    {%- for content in contents -%}
    {%- if content.pretitle is defined and content.pretitle | length > 0 -%}
        {%- set pretitle = content.pretitle -%}
    {%- else -%}
        {%- set pretitle = content.section.name -%}
    {%- endif -%}
    <article>
        <a href="{{ content.urls.0.url }}">
            <img src="{{ content.multimedias.0.getFrontImageUrl | optimized('rectangle_home_carousel_outstandings') }}" alt="{% if content.multimedias.0.description is defined and content.multimedias.0.description | length > 0 %}{{ content.multimedias.0.description }}{% else %}{{ content.title }}{% endif %}" />
            <span class="textos">
                <span class="antetitulo">{{ pretitle }}</span>
                <h1 class="titulo tam38">{{ content.title }}</h1>
                <footer class="clear">
                    <span class="icon icon-comment-outline"></span>
                    <span class="valor">12</span>
                    <span class="icon icon-share"></span>
                    <span class="valor">36</span>
                </footer>
            </span>
        </a>
    </article>
    {% endfor %}
</span>
{% endif %}
